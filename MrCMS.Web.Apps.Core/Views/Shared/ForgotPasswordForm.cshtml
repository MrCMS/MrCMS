@using MrCMS.Services
@using MrCMS.Services.Resources
@using MrCMS.Web.Apps.Core.Pages
@model MrCMS.Models.Auth.ForgotPasswordModel
@inject IUniquePageService UniquePageService

@using (Html.BeginForm(FormMethod.Post, new {@class = ""}))
{
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(x => x.Email)
                @Html.TextBoxFor(x => x.Email, new {@class = "form-control"})
                @Html.ValidationMessageFor(x => x.Email)
            </div>
            <div class="btn-group">
                <input type="submit" value="Recover password" class="btn btn-primary"/>
                <a href="@(UniquePageService.GetUrl<LoginPage>())" class="btn btn-default">
                    <span class="glyphicon glyphicon-user"></span> @Html.Resource("Login")</a>
            </div>
        </div>
    </div>
}