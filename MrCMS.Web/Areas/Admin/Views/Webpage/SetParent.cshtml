@using MrCMS.Helpers
@model MrCMS.Entities.Documents.Web.Webpage
@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";}
@using (Html.BeginForm("SetParent", "Webpage", new { id = "" }, FormMethod.Post, new { @class = "update-parent-form", @data_placeholder = "Root" }))
{
    <fieldset>
        <legend>Set parent
            <span class="btn-group  display-inline  pull-right">
                 <input type="submit" class="btn-danger btn submit-form-btn" value="Set parent" />
            </span>
        </legend>
        @Html.HiddenFor(x => x.Id)
        @Html.Label("parent", "Page")
        @Html.DropDownList("parent", ViewData["valid-parents"] as IEnumerable<SelectListItem>, new{@class="input-xlarge select2"})
    </fieldset>
}
@{
    Html.IncludeCss("/Areas/Admin/Content/Scripts/select2-3.4.1/select2.css");
    Html.IncludeScript("/Areas/Admin/Content/Scripts/select2-3.4.1/select2.min.js");
    Html.IncludeScript("/Areas/Admin/Content/Scripts/custom/move-webpage.js");
    
}
