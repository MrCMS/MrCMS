@using MrCMS.Web.Apps.Core.Entities.ContentBlocks
@model MrCMS.Web.Apps.Core.Entities.ContentBlocks.ImageAndText
@{
    var imageOrder = Model.Layout == ImageAndText.ImageAndTextLayout.ImageStart ? 0 : 1;
    var textOrder = Model.Layout == ImageAndText.ImageAndTextLayout.ImageStart ? 1 : 0;
}

<div class="row align-items-@(Model.ContentVerticalAlignment.ToString().ToLower()) g-3 my-3">
    <div class="col-10 col-sm-8 col-lg-6 order-@(imageOrder)">
        @{ await Html.RenderPartialAsync("BlockItems/ContentImage", Model.Image); }
    </div>
    <div class="col-lg-6 order-@(textOrder)">
        @{ await Html.RenderPartialAsync("BlockItems/ContentText", Model.Text); }
    </div>
</div>