@using MrCMS.Web.Apps.Core.Entities.ContentBlocks
@model MrCMS.Web.Apps.Core.Areas.Admin.Models.Content.UpdateImageAndTextModel
@{
    var layoutOptions = EnumHelper<ImageAndText.ImageAndTextLayout>.GetOptions();
    var verticalOptions = EnumHelper<ImageAndText.VerticalAlignment>.GetOptions();
}

<div class="form-group">
    @Html.LabelFor(x => x.Layout)
    @Html.DropDownListFor(x => x.Layout, layoutOptions, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Layout)
</div>

<div class="form-group">
    @Html.LabelFor(x => x.ContentVerticalAlignment)
    @Html.DropDownListFor(x => x.ContentVerticalAlignment, verticalOptions, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.ContentVerticalAlignment)
</div>