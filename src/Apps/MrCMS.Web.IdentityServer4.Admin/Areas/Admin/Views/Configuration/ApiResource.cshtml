@using Microsoft.AspNetCore.Mvc.Localization
@model MrCMS.Web.Apps.IdentityServer4.Admin.Core.Dtos.Configuration.ApiResourceDto
@inject IViewLocalizer Localizer
@inject IStringResourceProvider StringLocalizer
@{
    ViewBag.Title = StringLocalizer.GetValue("IS4ApiResourcePageTitle", "Api Resource");
    Html.IncludeCss("~/styles/openiconic/css/open-iconic-bootstrap.css");
    Html.IncludeCss("~/styles/css/web.css");
    Html.IncludeScript("~/dist/js/bundle.min.js");
}

<div class="row">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Configuration" asp-action="ApiResources">@StringLocalizer.GetValue("IS4NavigationApiResources", "Api Resources")</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
            </ol>
        </nav>
    </div>

    <div class="col-12">
        <h2>@StringLocalizer.GetValue("IS4ApiResourcePageTitle", "Api Resource")</h2>
    </div>
</div>

<form asp-action="ApiResource" method="post" id="api-resource-form">

    <div asp-validation-summary="All" class="text-danger"></div>

    <!--Hidden -->
    <input type="hidden" asp-for="Id" />

    <div class="card mt-3">
        <h5 class="card-header">@StringLocalizer.GetValue("IS4ApiResourcePanelTitle", "Api Resource")</h5>
        <div class="card-body">

            <!--Input - text -->
            <div class="form-group row">
                <label asp-for="Name" class="col-sm-3 col-form-label">
                    @await Html.PartialAsync("ApiResource/Section/Label", "Name")
                </label>
                <div class="col-sm-9">
                    <input type="text" required class="form-control" asp-for="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <!--Input - text -->
            <div class="form-group row">
                <label asp-for="DisplayName" class="col-sm-3 col-form-label">
                    @await Html.PartialAsync("ApiResource/Section/Label", "DisplayName")
                </label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" asp-for="DisplayName">
                </div>
            </div>

            <!--Input - text -->
            <div class="form-group row">
                <label asp-for="Description" class="col-sm-3 col-form-label">
                    @await Html.PartialAsync("ApiResource/Section/Label", "Description")
                </label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" asp-for="Description">
                </div>
            </div>

            <!--Checkbox-->
            <div class="form-group row">
                <label asp-for="Enabled" class="col-sm-3 col-form-label">
                    @await Html.PartialAsync("ApiResource/Section/Label", "Enabled")
                </label>
                <div class="col-sm-9">
                    <toggle-button>
                        <input asp-for="Enabled" type="checkbox">
                    </toggle-button>
                </div>
            </div>

            @if (Model.Id != 0)
            {
                <!--Button-->
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">
                        @await Html.PartialAsync("ApiResource/Section/Label", "Scopes")
                    </label>
                    <div class="col-sm-9">
                        <a asp-action="ApiScopes" asp-route-id="@Model.Id" class="btn btn-primary">@StringLocalizer.GetValue("IS4ApiResourceButtonManageScopes", "Manage Api Scopes")</a>
                    </div>
                </div>
                <!--Button-->
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">
                        @await Html.PartialAsync("ApiResource/Section/Label", "Secrets")
                    </label>
                    <div class="col-sm-9">
                        <a asp-action="ApiSecrets" asp-route-id="@Model.Id" class="btn btn-primary">@StringLocalizer.GetValue("IS4ApiResourceButtonManageSecrets", "Manage Api Secrets")</a>
                    </div>
                </div>
                <!--Button-->
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">
                        @await Html.PartialAsync("ApiResource/Section/Label", "Properties")
                    </label>
                    <div class="col-sm-9">
                        <a asp-action="ApiResourceProperties" asp-route-id="@Model.Id" class="btn btn-primary">@StringLocalizer.GetValue("IS4ApiResourceButtonManageProperties", "Manage Api Resource Properties")</a>
                    </div>
                </div>
            }

            <!--Select with tags-->
            <div class="form-group row">
                <label asp-for="UserClaims" class="col-sm-3 col-form-label">
                    @await Html.PartialAsync("ApiResource/Section/Label", "UserClaims")
                </label>
                <div class="col-sm-9">
                    <picker id="UserClaimsItems" multiple-select="true" min-search-text="2"
                            selected-items="@Model.UserClaims" url="@Url.Action("SearchClaims","Configuration")?claim"
                            search-input-placeholder="@Localizer["PickerSearchItemPlaceholder"].Value"
                            selected-items-title="@Localizer["PickerSelectedItemsTitle"].Value"
                            search-result-title="@Localizer["PickerSearchResultTitle"].Value"
                            suggested-items-title="@Localizer["PickerSuggestedItemsTitle"].Value"
                            no-item-selected-title="@Localizer["PickerNoItemSelectedTitle"].Value"
                            show-all-items-title="@Localizer["PickerShowAllItemsTitle"].Value"
                            item-already-selected-title="@Localizer["PickerItemAlreadySelectedTitle"].Value">
                    </picker>
                </div>
            </div>

            <!--Button-->
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">
                </label>
                <div class="col-sm-9">
                    <button type="submit" id="api-resource-save-button" class="btn btn-primary">@StringLocalizer.GetValue("IS4ButtonSaveApiResource", "Save Api Resource")</button>
                    @if (Model.Id != 0)
                    {
                <a class="btn btn-danger" asp-action="ApiResourceDelete" asp-route-id="@Model.Id">@StringLocalizer.GetValue("IS4ButtonDeleteApiResource", "Delete Api Resource")</a>
                    }
                </div>
            </div>
        </div>
    </div>

</form>

@section JavaScriptBlock
	{
    <script>
        $(function () {
            //Disable enter for this form
            FormMvc.disableEnter($('#api-resource-form'));
        });
    </script>
}