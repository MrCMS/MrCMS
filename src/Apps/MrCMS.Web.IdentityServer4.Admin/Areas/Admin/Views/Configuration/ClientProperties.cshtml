@using Microsoft.AspNetCore.Mvc.Localization
@using MrCMS.Web.Apps.IdentityServer4.Admin.Core.Dtos.Common
@model MrCMS.Web.Apps.IdentityServer4.Admin.Core.Dtos.Configuration.ClientPropertiesDto
@inject IViewLocalizer Localizer
@inject IStringResourceProvider StringLocalizer

@{
    ViewBag.Title = StringLocalizer.GetValue("IS4ClientPropertyPageTitle", "Client Properties");
    Html.IncludeCss("~/styles/openiconic/css/open-iconic-bootstrap.css");
    Html.IncludeCss("~/styles/css/web.css");
    Html.IncludeScript("~/dist/js/bundle.min.js");
}

<form asp-controller="Configuration" asp-action="ClientProperties" Method="post">
    <div class="row">

        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Configuration" asp-action="Clients">@Localizer["IS4NavigationClients"]</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Configuration" asp-action="Client" asp-route-id="@Model.ClientId">@Model.ClientName</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@StringLocalizer.GetValue("IS4NavigationClientProperties", "Client Properties")</li>
                </ol>
            </nav>
        </div>

        <div class="col-md-12">

            <h3>@StringLocalizer.GetValue("IS4ClientPropertyPageTitle", "Client Properties")</h3>

            <div asp-validation-summary="All" class="text-danger"></div>

            <!--Hidden -->
            <input type="hidden" asp-for="ClientId" />

            <!--Hidden -->
            <input type="hidden" asp-for="ClientName" />

            <div class="card mt-3">
                <h5 class="card-header">@StringLocalizer.GetValue("IS4ClientPropertyPanelTitleNew", "Client Property")</h5>
                <div class="card-body">

                    <!--Input - text -->
                    <div class="form-group row">
                        <label asp-for="Key" class="col-sm-3 col-form-label">
                            @await Html.PartialAsync("Client/Section/Label", "PropertyKey")
                        </label>
                        <div class="col-sm-9">
                            <input type="text" required class="form-control" asp-for="Key">
                            <span asp-validation-for="Key" class="text-danger"></span>
                        </div>
                    </div>

                    <!--Input - text -->
                    <div class="form-group row">
                        <label asp-for="Value" class="col-sm-3 col-form-label">
                            @await Html.PartialAsync("Client/Section/Label", "PropertyValue")
                        </label>
                        <div class="col-sm-9">
                            <input type="text" required class="form-control" asp-for="Value">
                            <span asp-validation-for="Value" class="text-danger"></span>
                        </div>
                    </div>

                    <!--Button-->
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">
                        </label>
                        <div class="col-sm-9">
                            <button type="submit" class="btn btn-primary">@StringLocalizer.GetValue("IS4ClientButtonAddProperty", "Add Client Property")</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<div class="row">
    <div class="col-md-12">
        <div class="card mt-3">
            <h5 class="card-header">@StringLocalizer.GetValue("IS4ClientPropertyPanelTitle", "Client Properties")</h5>
            <div class="card-body">
                <div class="row table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>@StringLocalizer.GetValue("IS4ClientPropertyTableKey", "Key")</th>
                                <th>@StringLocalizer.GetValue("IS4ClientPropertyTableValue", "Value")</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var clientProperty in Model.ClientProperties)
                            {
                                <tr>
                                    <td>@clientProperty.Key</td>
                                    <td>@clientProperty.Value</td>
                                    <td><a asp-action="ClientPropertyDelete" asp-route-id="@clientProperty.Id" class="btn btn-danger">@StringLocalizer.GetValue("IS4ClientPropertyTableButtonRemove", "Delete")</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="row">
                    <div class="col-12">
                        @await Html.PartialAsync("Common/Pager", new Pager { Action = "ClientProperties", PageSize = Model.PageSize, TotalCount = Model.TotalCount })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>