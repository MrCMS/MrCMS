@using Microsoft.AspNetCore.Mvc.Localization
@using MrCMS.Services.Resources
@using MrCMS.Web.Apps.IdentityServer4.Admin.Core.Dtos.Enums
@model MrCMS.Web.Apps.IdentityServer4.Admin.Core.Dtos.Configuration.ClientDto
@inject IViewLocalizer Localizer
@inject IStringResourceProvider StringLocalizer

<div class="card mt-3">
    <h5 class="card-header">@StringLocalizer.GetValue("IS4ClientNamePanelTitle", "Name")</h5>
    <div class="card-body">

        <!--Input - text -->
        <div class="form-group row">
            <label asp-for="ClientId" class="col-sm-3 col-form-label">
                @await Html.PartialAsync("Client/Section/Label", "ClientId")
            </label>
            <div class="col-sm-9">
                <input type="text" required class="form-control" asp-for="ClientId">
                <span asp-validation-for="ClientId" class="text-danger"></span>
            </div>
        </div>

        <!--Input - text -->
        <div class="form-group row">
            <label asp-for="ClientName" class="col-sm-3 col-form-label">
                @await Html.PartialAsync("Client/Section/Label", "ClientName")
            </label>
            <div class="col-sm-9">
                <input type="text" required class="form-control" asp-for="ClientName">
                <span asp-validation-for="ClientName" class="text-danger"></span>
            </div>
        </div>

        @if (Model.Id == 0)
        {
            <div class="card-deck mb-3 text-center">
                <div class="card mt-4 mb-4 box-shadow">
                    <div class="card-body">
                        <label class="radio-img">
                            <input type="radio" asp-for="ClientType" checked="checked" value="@((int)ClientType.Empty)" />
                            <img src="~/images/icons/empty-client.png" alt="Empty" />
                            <h3>@StringLocalizer.GetValue("IS4EmptyClientType", "Empty - Default")</h3>
                        </label>
                    </div>
                </div>
                <div class="w-100 d-none d-sm-block d-md-none"></div>
                <div class="card mt-4 mb-4 box-shadow">
                    <div class="card-body">
                        <label class="radio-img">
                            <input type="radio" asp-for="ClientType" value="@((int)ClientType.Spa)" />
                            <img src="~/images/icons/spa-client.png" alt="Web Spa" />
                            <h3>@StringLocalizer.GetValue("IS4SpaClientType", "Single Page Application - Javascript")</h3>
                            <h4>@StringLocalizer.GetValue("IS4SpaCode", "Authorization Code Flow with PKCE")</h4>
                        </label>
                    </div>
                </div>
                <div class="w-100 d-none d-sm-block d-md-none"></div>
                <div class="card mt-4 mb-4 box-shadow">
                    <div class="card-body">
                        <label class="radio-img">
                            <input type="radio" asp-for="ClientType" value="@((int)ClientType.WebHybrid)" />
                            <img src="~/images/icons/web-client.png" alt="Web Hybrid" />
                            <h3>@StringLocalizer.GetValue("IS4WebHybridClientType", "Web Application - Server side")</h3>
                            <h4>@StringLocalizer.GetValue("IS4HybridCode", "Hybrid flow")</h4>
                        </label>
                    </div>
                </div>
            </div>

            <div class="card-deck mb-3 text-center">
                <div class="card mb-4 box-shadow">
                    <div class="card-body">
                        <label class="radio-img">
                            <input type="radio" asp-for="ClientType" value="@((int)ClientType.Device)" />
                            <img src="~/images/icons/device-client.png" alt="Device" />
                            <h3>@StringLocalizer.GetValue("IS4DeviceClientType", "TV and Limited-Input Device Application")</h3>
                            <h4>@StringLocalizer.GetValue("IS4DeviceFlowCode", "Device flow")</h4>
                        </label>
                    </div>
                </div>
                <div class="w-100 d-none d-sm-block d-md-none"></div>
                <div class="card mb-4 box-shadow">
                    <div class="card-body">
                        <label class="radio-img">
                            <input type="radio" asp-for="ClientType" value="@((int) ClientType.Native)" />
                            <img src="~/images/icons/native-client.png" alt="Native" />
                            <h3>@StringLocalizer.GetValue("IS4NativeClientType", "Native Application - Mobile/Desktop")</h3>
                            <h4>@StringLocalizer.GetValue("IS4HybridCode", "Hybrid flow")</h4>
                        </label>
                    </div>
                </div>
                <div class="w-100 d-none d-sm-block d-md-none"></div>
                <div class="card mb-4 box-shadow">
                    <div class="card-body">
                        <label class="radio-img">
                            <input type="radio" asp-for="ClientType" value="@((int)ClientType.Machine)" />
                            <img src="~/images/icons/server-client.png" alt="Machine" />
                            <h3>@StringLocalizer.GetValue("IS4MachineClientType", "Native Application - Mobile/Desktop")</h3>
                            <h4>@StringLocalizer.GetValue("IS4PasswordAndClientCode", "Resource Owner Password and Client Credentials flow")</h4>
                        </label>
                    </div>
                </div>
            </div>
        }
    </div>
</div>