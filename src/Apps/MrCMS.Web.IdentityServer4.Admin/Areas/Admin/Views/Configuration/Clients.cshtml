@using Microsoft.AspNetCore.Mvc.Localization
@using MrCMS.Helpers
@using MrCMS.Web.Apps.IdentityServer4.Admin.Core.Dtos.Common
@inject IViewLocalizer Localizer
@inject IStringResourceProvider StringLocalizer

@{
    ViewBag.Title = StringLocalizer.GetValue("IS4ClientsPageTitle", "Clients");
    Html.IncludeCss("~/styles/openiconic/css/open-iconic-bootstrap.css");
    Html.IncludeCss("~/styles/css/web.css");
   
}

<div class="row">
    <div class="col-12">
        <h2>@StringLocalizer.GetValue("IS4ClientsPageTitle", "Clients")</h2>
    </div>

    <div class="col-12">
        <a asp-action="Client" class="btn btn-outline-primary mb-3"><span class="oi oi-plus"></span> @StringLocalizer.GetValue("ButtonAddNewClient", "Add Client")</a>
    </div>

    <div class="col-12">
        @await Html.PartialAsync("Common/Search", new Search() { Action = "Clients", Controller = "Configuration" })
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th></th>
                        <th>@StringLocalizer.GetValue("TableClientId", "Client Id")</th>
                        <th>@StringLocalizer.GetValue("TableClientName", "Client Name")</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var client in Model.Clients)
                    {
                        <tr>
                            <th><a class="btn btn-primary" asp-action="Client" asp-route-id="@client.Id">@StringLocalizer.GetValue("TableButtonEdit", "Edit")</a></th>
                            <td>@client.ClientId</td>
                            <td>@client.ClientName</td>
                            <td>
                                <a class="btn btn-danger" asp-action="ClientDelete" asp-route-id="@client.Id"><span class="oi oi-x"></span></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

