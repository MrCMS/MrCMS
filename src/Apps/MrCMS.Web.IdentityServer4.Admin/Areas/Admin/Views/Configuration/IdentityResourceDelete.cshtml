@using Microsoft.AspNetCore.Mvc.Localization
@model MrCMS.Web.Apps.IdentityServer4.Admin.Core.Dtos.Configuration.IdentityResourceDto
@inject IViewLocalizer Localizer
@inject IStringResourceProvider StringLocalizer

@{
    ViewBag.Title = StringLocalizer.GetValue("IS4IdentityResourceDeletePageTitle", "Delete Identity Resource");
    //Layout = "_Layout";
}

<div class="row">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Configuration" asp-action="IdentityResources">@Localizer["IS4NavigationIdentityResources"]</a></li>
                <li class="breadcrumb-item"><a asp-controller="Configuration" asp-action="IdentityResource" asp-route-id="@Model.Id">@Model.Name</a></li>
                <li class="breadcrumb-item active" aria-current="page">@StringLocalizer.GetValue("IS4IdentityResourceDeletePageTitle", "Delete Identity Resource")</li>
            </ol>
        </nav>
    </div>

    <div class="col-12">
        <h2>@StringLocalizer.GetValue("IS4IdentityResourceDeletePageTitle", "Delete Identity Resource")</h2>
    </div>
</div>

<form asp-action="IdentityResourceDelete" method="post">
    <!--Hidden -->
    <input type="hidden" asp-for="Id" />

    <div class="card mt-3">
        <h5 class="card-header">@StringLocalizer.GetValue("IS4IdentityResourceDeletePanelTitle", "Delete Identity Resource")</h5>
        <div class="card-body">

            <!--Input - text -->
            <div class="form-group row">
                <label asp-for="Name" class="col-sm-3 col-form-label">
                    @await Html.PartialAsync("IdentityResource/Section/Label", "Name")
                </label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" disabled="disabled" asp-for="Name">
                </div>
            </div>

            <!--Button-->
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">
                </label>
                <div class="col-sm-9">
                    <button type="submit" class="btn btn-danger">@StringLocalizer.GetValue("IS4IdentityResourceButtonDelete", "Delete Identity Resource")</button>
                </div>
            </div>
        </div>
    </div>
</form>