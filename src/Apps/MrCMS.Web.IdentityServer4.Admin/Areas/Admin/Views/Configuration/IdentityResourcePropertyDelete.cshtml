@using Microsoft.AspNetCore.Mvc.Localization
@model MrCMS.Web.Apps.IdentityServer4.Admin.Core.Dtos.Configuration.IdentityResourcePropertiesDto
@inject IViewLocalizer Localizer
@inject IStringResourceProvider StringLocalizer

@{
    ViewBag.Title = StringLocalizer.GetValue("IS4IdentityResourcePropertyDeletePageTitle", "Delete Identity Resource Property");
}

<form asp-controller="Configuration" asp-action="IdentityResourcePropertyDelete" Method="post">
    <div class="row">

        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Configuration" asp-action="IdentityResources">@Localizer["IS4NavigationIdentityResources"]</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Configuration" asp-action="IdentityResource" asp-route-id="@Model.IdentityResourceId">@Model.IdentityResourceName</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Configuration" asp-action="IdentityResourceProperties" asp-route-id="@Model.IdentityResourceId">@StringLocalizer.GetValue("IS4NavigationIdentityResourceProperties", "Delete Identity Resource Property")</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@StringLocalizer.GetValue("IS4IdentityResourcePropertyDeletePageTitle", "Delete Identity Resource Property")</li>
                </ol>
            </nav>
        </div>

        <div class="col-md-12">
            <h3>@StringLocalizer.GetValue("IS4IdentityResourcePropertyDeletePageTitle", "Delete Identity Resource Property")</h3>

            <!--Hidden -->
            <input type="hidden" asp-for="IdentityResourceId" />
            <input type="hidden" asp-for="IdentityResourcePropertyId" />

            <div class="card mt-3">
                <h5 class="card-header">@StringLocalizer.GetValue("IS4IdentityResourcePropertyDeletePanelTitle", "Delete Identity Resource Property")</h5>
                <div class="card-body">
                    <!--Input - text -->
                    <div class="form-group row">
                        <label asp-for="Key" class="col-sm-3 col-form-label">
                            @await Html.PartialAsync("IdentityResource/Section/Label", "PropertyKey")
                        </label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" disabled="disabled" asp-for="Key">
                        </div>
                    </div>

                    <!--Input - text -->
                    <div class="form-group row">
                        <label asp-for="Value" class="col-sm-3 col-form-label">
                            @await Html.PartialAsync("IdentityResource/Section/Label", "PropertyValue")
                        </label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" disabled="disabled" asp-for="Value">
                        </div>
                    </div>

                    <!--Button-->
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">
                        </label>
                        <div class="col-sm-9">
                            <button type="submit" class="btn btn-danger">@StringLocalizer.GetValue("IS4IdentityResourcePropertyDeleteButtonClaim", "Delete Identity Resource Property")</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>