@model MrCMS.Web.Apps.IdentityServer4.Admin.Core.Dtos.Common.Search
@using Microsoft.AspNetCore.Mvc.Localization
@using MrCMS.Services.Resources
@inject IViewLocalizer Localizer
@inject IStringResourceProvider StringLocalizer

<form asp-controller="@Model.Controller" asp-action="@Model.Action" method="get">
    <div class="form-row">
        <div class="col-12 mb-3">
            <input name="search" value="@ViewBag.Search" type="text" placeholder="@StringLocalizer.GetValue("InputSearchPlaceHolder", "Search")" class="form-control" />
        </div>
    </div>

    <div class="form-row">
        <div class="col-12 mb-3">
            <input type="submit" class="btn btn-primary" value="@StringLocalizer.GetValue("ButtonSearch", "Search")" />
        </div>
    </div>
</form>