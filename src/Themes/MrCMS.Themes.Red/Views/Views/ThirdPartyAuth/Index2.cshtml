@using MrCMS.Helpers
@model MrCMS.Settings.ThirdPartyAuthSettings
@{ ViewBag.Title = "Third Party Auth Settings"; }

<form asp-controller="ThirdPartyAuth" asp-action="Index" method="post">

    <admin-header>
        <row>
            <admin-header-title title="@Html.Resource("admin-third-party-auth-settings", "Third Party Auth Settings")"/>

            <admin-header-actions>
                <button class="btn btn-primary">
                    @Html.Resource("admin-save", "Save")
                </button>
            </admin-header-actions>
        </row>
    </admin-header>

    <card>
        <card-body>

            <div class="row">
                <div class="col-lg-12">
                    @Html.InfoBlock(Html.Resource("Heads up") + "!", Html.Resource("Admin Third Party Restart", "These settings are system wide. After changing third party auth settings the website will restart."))
                    <div class="form-group">
                        @Html.EditorFor(x => x.GoogleEnabled)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(settings => settings.GoogleClientId)
                        @Html.TextBoxFor(settings => settings.GoogleClientId, new {@class = "form-control"})
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(settings => settings.GoogleClientSecret)
                        @Html.TextBoxFor(settings => settings.GoogleClientSecret, new {@class = "form-control"})
                    </div>
                    <hr/>
                    <div class="form-group">
                        @Html.EditorFor(x => x.FacebookEnabled)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(settings => settings.FacebookAppId)
                        @Html.TextBoxFor(settings => settings.FacebookAppId, new {@class = "form-control"})
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(settings => settings.FacebookAppSecret)
                        @Html.TextBoxFor(settings => settings.FacebookAppSecret, new {@class = "form-control"})
                    </div>
                    <hr/>
                    <div class="form-group">
                        @Html.EditorFor(x => x.LinkedInEnabled)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(settings => settings.LinkedInClientId)
                        @Html.TextBoxFor(settings => settings.LinkedInClientId, new {@class = "form-control"})
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(settings => settings.LinkedInClientSecret)
                        @Html.TextBoxFor(settings => settings.LinkedInClientSecret, new {@class = "form-control"})
                    </div>
                </div>
            </div>
            
        </card-body>
    </card>

</form>
