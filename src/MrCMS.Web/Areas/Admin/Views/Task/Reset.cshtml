@model MrCMS.Web.Areas.Admin.Models.TaskUpdateData
@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";}

@using (Html.BeginForm("Reset", "Task", FormMethod.Post))
{
    @Html.HiddenFor(x => x.TypeName)
    <fieldset>
        <legend>
            @Html.Resource("Admin Tasks Reset", "Reset Task")
            <span class="btn-group pull-right">
                <input type="submit" class="btn-primary btn" value="@Html.Resource("Reset")" />
            </span>
        </legend>

        @Html.Resource("Admin Tasks - Confirm Reset", "Click the reset button to confirm you want to reset this task.")

    </fieldset>
}