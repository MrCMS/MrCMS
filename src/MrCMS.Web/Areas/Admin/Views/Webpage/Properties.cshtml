@using MrCMS.Entities.Documents.Web
@using MrCMS.Helpers
@using MrCMS.Web.Apps.Admin.Infrastructure.Helpers
@model MrCMS.Web.Apps.Admin.Models.WebpageEdit.WebpagePropertiesTabViewModel
@{

    var webpage = ViewData["webpage"] as Webpage;
}
@Html.HiddenFor(x => x.LiveUrlSegment)
@Html.HiddenFor(x => x.DocumentType)
@Html.HiddenFor(x => x.Id)

<div class="content-item">
    <div class="form-group">
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    </div>
    @Html.ValidationMessageFor(x => x.Name)

    @if (Html.GetDocumentMetadata(Model.Id).HasBodyContent)
    {
        <div class="body-content">
            <!-- leave this class here for fixing the bar to top only for body content -->
            @Html.TextAreaFor(x => x.BodyContent, new { @class = "ckedit-enabled" })
        </div>
    }
    @await Html.RenderUpdateCustomAdminProperties(webpage)
</div>