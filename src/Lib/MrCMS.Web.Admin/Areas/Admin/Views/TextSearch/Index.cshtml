@using MrCMS.Settings
@using MrCMS.Web.Admin.Infrastructure.TagHelpers
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model MrCMS.Tasks.QueuedTaskSearchQuery
@inject SiteSettings SiteSettings
@{
    ViewBag.Title = "Text Search";
}


<admin-header>
    <row>
        <admin-header-title title="@await Html.Resource("admin-text-search", "Text Search", option=> option.DisableInlineEditing())"/>
        <admin-header-actions>
            <form asp-controller="TextSearch" asp-action="Refresh">
                <button class="btn btn-primary" type="submit">Refresh</button>
            </form>
        </admin-header-actions>
    </row>
</admin-header>

