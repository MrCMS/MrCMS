@using MrCMS.Entities.Documents.Media
@using MrCMS.Web.Admin.Infrastructure.TagHelpers
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model MrCMS.Web.Admin.Models.AddMediaCategoryModel
@{
    ViewBag.Title = "Add media category";
    var parent = ViewData["parent"] as MediaCategory;
}

<form asp-controller="MediaCategory" asp-action="Add" method="post" id="add-media-category">

    <admin-header>
        <row>
            <admin-header-title title="@await Html.Resource("admin-add", "Add", option=> option.DisableInlineEditing())" />

            <admin-header-actions>
                <button class="btn btn-primary">
                    @await Html.Resource("Add")
                </button>
            </admin-header-actions>
        </row>
    </admin-header>

    <div class="row">
        <div class="col-lg-12">
            <input type="hidden" asp-for="ParentId" />
            @Html.Hidden("ParentUrl(Context)", parent?.Path)
            <div class="form-group">
                <label asp-for="Name"></label>
                <input type="text" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="UrlSegment"></label>
                <input type="text" asp-for="UrlSegment" class="form-control" />
                <span asp-validation-for="UrlSegment"></span>
            </div>
        </div>
    </div>

</form>