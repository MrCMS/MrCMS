@using Microsoft.AspNetCore.Mvc.TagHelpers
@model MrCMS.Web.Admin.Models.AddFormListOptionModel
@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml"; }
<form asp-action="Add" asp-controller="FormListOption" method="post" class="form-update-form">
    <fieldset>
        <legend>
            @await Html.Resource("Admin Form Add Option Title", "Add option")
            <span class="btn-group d-inline pull-right">
                <input type="button" class="btn-primary btn submit-form-btn" value="@await Html.Resource("Admin Form Add Option Button", "Add form option", options => options.DisableInlineEditing())"/>
            </span>
        </legend>
        <input type="hidden" asp-for="FormPropertyId"/>
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    <label asp-for="Value"></label>
                    <input asp-for="Value" class="form-control" />
                    <span asp-validation-for="Value"></span>
                </div>
                <div class="form-group">
                    <div class="form-check">
                        <input asp-for="Selected" type="checkbox" class="form-check-input" />
                        <label asp-for="Selected" class="form-check-label"></label>
                    </div>
                </div>
            </div>
        </div>
    </fieldset>
</form>