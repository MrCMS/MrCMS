@model MrCMS.Entities.Documents.Web.Webpage
@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml"; }
@using (Html.BeginForm("Set", "WebpageParent", new {id = ""}, FormMethod.Post, null, new {@class = "update-parent-form"}))
{
    <fieldset>
        <legend>
            @await Html.Resource("Admin Webpage Move", "Move")
            <span class="btn-group pull-right">
                <input type="submit" class="btn-danger btn submit-form-btn" value="@await Html.Resource("Save", configureOptions=> configureOptions.DisableInlineEditing())"/>
            </span>
        </legend>
        @Html.HiddenFor(x => x.Id)
        <div class="form-group">
            @Html.Label("parentVal", "Page")
            @Html.DropDownList("parentVal", ViewData["valid-parents"] as IEnumerable<SelectListItem>, new {@class = "select2", @style = "width:100%;"})
        </div>
    </fieldset>
}