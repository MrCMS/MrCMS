@using Microsoft.AspNetCore.Mvc.TagHelpers
@model MrCMS.Web.Admin.Models.AddLayoutAreaModel
@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml"; }

<form asp-action="Add" asp-controller="LayoutArea" method="post">
    @Html.AntiForgeryToken()
    <fieldset>
        <legend>
            @await Html.Resource("Admin Layout Areas Add Title", "Add layout area")
            <span class="btn-group pull-right">
                <input type="submit" class="btn-success btn" value="@await Html.Resource("Save", configureOptions=> configureOptions.DisableInlineEditing())" />
            </span>
        </legend>
        <input type="hidden" asp-for="LayoutId"/>
        <div class="form-group">
            <label asp-for="AreaName"></label>
            <input type="text" asp-for="AreaName" class="form-control"/>
            <span asp-validation-for="AreaName"></span>
        </div>
    </fieldset>
</form>