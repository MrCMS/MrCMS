@using Microsoft.AspNetCore.Mvc.TagHelpers
@using MrCMS.Web.Admin.Infrastructure.TagHelpers
@model MrCMS.Web.Admin.Models.AddSiteModel

<form asp-controller="Sites" asp-action="Add" method="post">

    <admin-header>
        <row>
            <admin-header-title title="@await Html.Resource("admin-add-site", "Add Site", option=> option.DisableInlineEditing())"/>

            <admin-header-actions>
                <div class="btn btn-group">
                    <a asp-action="Index" class="btn btn-secondary">@await Html.Resource("admin-back", "Back")</a>
                    <input type="submit" class="btn-primary btn" value="@await Html.Resource("admin-save", "Save", options => options.DisableInlineEditing())"/>

                </div>
            </admin-header-actions>
        </row>
    </admin-header>


    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" type="text" class="form-control" />
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="BaseUrl"></label>
                <input asp-for="BaseUrl" type="text" class="form-control" />
                <span asp-validation-for="BaseUrl"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <partial name="CloneOptions" model="Model"/>
        </div>
    </div>


</form>