@using Microsoft.AspNetCore.Mvc.TagHelpers
@model MrCMS.Entities.People.UserRole
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";
}
<form asp-controller="Role" asp-action="Add" method="post">
    <fieldset>
        <legend>
            @await Html.Resource("Admin User Roles Add", "Add Role")
            <span class="btn-group pull-right">
                <input type="submit" class="btn-primary btn" value="@await Html.Resource("Save", configureOptions=> configureOptions.DisableInlineEditing())" />
            </span>
        </legend>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" type="text" class="form-control" />
            <span asp-validation-for="Name"></span>
        </div>
    </fieldset>
</form>