@model MrCMS.Entities.Multisite.RedirectedDomain

@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml"; }
@using (Html.BeginForm("Delete", "RedirectedDomain", new {id = Model.Id}, FormMethod.Post, false, new {style = "display:inline;"}))
{
    @Html.AntiForgeryToken()
    <fieldset>
        <legend>
            @await Html.Resource("Admin Redirected Domain Delete Title", "Delete Redirected Domain")
            <span class="btn-group  d-inline  pull-right">
                <input type="submit" class="btn btn-danger" value="@await Html.Resource("Delete", configureOptions=> configureOptions.DisableInlineEditing())"/>
            </span>
        </legend>
        @Html.InfoBlock(await Html.PlainResource("Heads up") + "!", await Html.PlainResource("Admin Delete Info Warning", "Deleting this cannot be undone."), AlertType.danger)
    </fieldset>
}