@using MrCMS.Services
@using MrCMS.Settings
@using Microsoft.AspNetCore.Mvc.TagHelpers
@inject SiteSettings Settings
@inject IGetCurrentUser GetCurrentUser
@{
    // var typeOptions = UniversalSearchHelper.GetOptions();
}

<nav class="main-header navbar navbar-expand bg-white navbar-light border-bottom" id="mrcms-navbar">

    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#">
                <i class="fa fa-bars"></i>
            </a>
        </li>
    </ul>

    <div class="collapse navbar-collapse" id="mrcms-top-nav">

        <form class="form-inline ml-2 d-flex w-50" role="search" action="@Url.Action("Index", "Search")" method="GET">

            <div class="input-group w-75">
                @Html.TextBox("term", "", new {@class = "search-query form-control", data_search_item_term = true, placeholder = "Search", autocomplete = "off", tabindex = "1"})

                <div class="input-group-append">
                    <button type="submit" class="btn btn-outline-success" tabindex="2">
                        <span class="fa fa-search"></span>
                    </button>
                </div>
            </div>
        </form>

        <ul class="navbar-nav ml-auto" id="mrcms-admin-links-right">
            <li class="nav-item">
                <a href="/" target="new" class="nav-link">
                    <i class="fa fa-home"></i>
                </a>
            </li>
            @if (!User.DisableNotifications())
            {
                <partial name="PersistentNotificationNav"/>                
            }
            <li class="nav-item dropdown">
                <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown">
                    <i class="fa fa-sitemap"></i>
                </a>
                <div class="dropdown-menu  dropdown-menu-right">
                    <partial name="SiteListNav"/>
                </div>
            </li>
        </ul>

    </div>
</nav>