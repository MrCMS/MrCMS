@using Microsoft.AspNetCore.Mvc.TagHelpers
@model MrCMS.Web.Admin.Models.SetRedirectPageModel
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";
}

<form asp-controller="Redirects" asp-action="SetRedirectPage" asp-route-id="@Model.Id">
    @Html.ReturnToReferrer()
    <fieldset>
        <legend>
            Set Redirect Page
            <span class="btn-group display-inline pull-right">
                <button type="submit" class="btn btn-secondary">Set page</button>
            </span>
        </legend>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for="PageId"></label>
            @Html.DropDownListFor(f => f.PageId, new List<SelectListItem>(), new { @class = "form-control", data_webpage_search_select2 = true })
        </div>
    </fieldset>
</form>