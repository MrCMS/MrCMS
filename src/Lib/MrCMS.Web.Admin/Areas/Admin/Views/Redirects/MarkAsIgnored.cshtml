@using Microsoft.AspNetCore.Mvc.TagHelpers
@model MrCMS.Entities.Documents.Web.UrlHistory
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";
}

<form asp-controller="Redirects" asp-action="MarkAsIgnored" asp-route-id="@Model.Id">
    @Html.ReturnToReferrer()
    <fieldset>
        <legend>
            Mark as ignored
            <span class="btn-group display-inline pull-right">
                <button type="submit" class="btn btn-info">Mark as ignored</button>
            </span>
        </legend>
        <p>
            @await Html.Resource("Redirects - Mark as ignored", "Are you sure you wish to mark '{url}' as ignored?", configureOptions => configureOptions.AddReplacement("url", Model.UrlSegment))
        </p>
    </fieldset>
</form>