@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml"; }
@model string
@using (Html.BeginForm("ImportLegacyTemplate", "MessageTemplate", new {type = Model}, FormMethod.Post))
{
    <h1 class="page-header">
        @await Html.Resource("Import Legacy Message Template")
        <span class="btn-group pull-right">
            <input type="submit" class="btn btn-primary" value="@await Html.Resource("Import", options => options.DisableInlineEditing())"/>
        </span>
    </h1>

    @await Html.Resource("Admin Message Template Import Legacy", "Are you sure you want to import the legacy message template? This action cannot be undone.")
}